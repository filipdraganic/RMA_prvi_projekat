<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rs.raf.projekat1.Filip_Draganic_RN542017.views.activity.MainActivity">

    <com.rs.raf.projekat1.Filip_Draganic_RN542017.views.viewpager.NonScrollableViewPager
        android:id="@+id/noscrollBottomNavigation"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"


    />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@android:color/white"
        app:itemIconTint="@color/selector"
        app:itemTextColor="@color/black"
        app:menu="@menu/navigacija"

    />




</androidx.constraintlayout.widget.ConstraintLayout>